@model JEAN_HIDALGO_EXAMEN_PARCIAL.Models.Curso

@{
    ViewData["Title"] = "Editar Curso";
}

<h2>Editar Curso</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Codigo" class="control-label"></label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Creditos" class="control-label"></label>
        <input asp-for="Creditos" class="form-control" type="number" />
        <span asp-validation-for="Creditos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CupoMaximo" class="control-label"></label>
        <input asp-for="CupoMaximo" class="form-control" type="number" />
        <span asp-validation-for="CupoMaximo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HorarioInicio" class="control-label"></label>
        <input asp-for="HorarioInicio" class="form-control" type="time" />
        <span asp-validation-for="HorarioInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HorarioFin" class="control-label"></label>
        <input asp-for="HorarioFin" class="form-control" type="time" />
        <span asp-validation-for="HorarioFin" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
